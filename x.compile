    gcc -Wall -rdynamic -g -O3 -fomit-frame-pointer $WRITESTRINGS $UNUSEDRESULT $WNOSIGNCOMPARE $UNUSEDVARIABLE $SETVARIABLE $WNOARRAYBOUNDS -o smithd smithd.cpp threadPool.o hook.o helper.o log.o iniparser.o dictionary.o encrypt.o icmp.o liboauth.a libmysqlwrap.a libjansson.a -I/usr/local/include -I/usr/local/include/libmongoc-1.0 -I/usr/local/include/libbson-1.0 -L/usr/local/lib -Xlinker -zmuldefs -lpthread -lcurl -lm -lzmq -lstdc++ -lmysqlclient -lmongoc-1.0 -lbson-1.0
    
