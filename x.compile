    cd test
    gcc -Wall -rdynamic -g -O3 -fomit-frame-pointer $WRITESTRINGS $UNUSEDRESULT $WNOSIGNCOMPARE $UNUSEDVARIABLE $SETVARIABLE $WNOARRAYBOUNDS -o testHooker testHooker.c ../hook.o ../helper.o ../log.o ../iniparser.o ../dictionary.o ../encrypt.o ../liboauth.a ../libjansson.a -I/usr/local/include -I../jsonlib -L/usr/local/lib -Xlinker -zmuldefs -lpthread -lcurl -lm -lzmq -lstdc++ -lmysqlclient
